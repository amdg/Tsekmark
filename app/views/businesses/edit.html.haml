%h1= "Edit #{@biz.name}"
%hr
.row-fluid
  .span12
    = simple_form_for(@biz, :url => business_update_path, class: 'form-horizontal', html: {multipart: true}) do |f|
      = f.error_notification
      .span6
        .area
          .heading
            %h3.form-heading Update Business

            .form-inputs
              %fieldset
                = f.input :name, :required => true
                = f.input :business_category, :required => true, input_html: { id: 'category-typeahead', class: 'typeahead', value: @biz.business_category.name}
                %input{ type: 'hidden', name: 'selected_category', id: 'category_id', value: @biz.business_category_id}
                = f.input :phone
                = f.input :fax
                = f.input :email, :required => true, :autofocus => true
                = f.input :photo, :as => :file, label: 'Business Logo'
                = f.input :website
                = f.input :location, :required => true, input_html: { id: 'city-typeahead', class: 'typeahead', value: @biz.location.combined}
                %input{ type: 'hidden', name: 'selected_location', id: 'location_id', value: @biz.location_id}
                = f.input :address1
                = f.input :address2
                = f.input :postal_code

                = f.text_area :description
                = f.text_area :product_services
                = f.text_area :specialties
                = f.text_area :brands

            .form-actions
              = f.button :submit, "Save Changes"
    %h3.row-header Connections
    .row
      - User.omniauth_providers.each do |provider|
        %span.span3
          - provider_auth = @biz.send("#{provider}_auth")
          - if provider_auth
            = link_to authentication_path(provider_auth.id), method: 'delete', class: "btn btn-xlarge btn-danger btn-#{provider.to_s}" do
              %i{class: "icon-#{provider}"} | Disconnect #{provider.to_s.titleize}
          - else
            = link_to omniauth_authorize_path(User, provider), class: "btn btn-xlarge btn-info btn-#{provider.to_s}" do
              %i{class: "icon-#{provider}"} | Connect #{provider.to_s.titleize}

