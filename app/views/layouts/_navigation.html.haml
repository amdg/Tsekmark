.navbar.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to root_path, class: 'pull-left' do
        = image_tag 'logo.png'
      .nav-collapse.collapse
        %ul.nav
          %li
            %a{:href => "/"}
              %i.icon-home.icon-white
              Home
          %li
            %a{:href => "/sectors"}
              %i.icon-flag.icon-white
              Sectors
          %li
            %a{:href => "/regions"}
              %i.icon-map-marker.icon-white
              Regions
        - if user_signed_in?
          %li.pull-right
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Welcome, #{blaster.name}
              %b.caret
        - else
          %ul.nav.pull-right
            %li
              = link_to new_user_session_path do
                %i.icon-on
                Login
            %li
              = link_to new_user_registration_path do
                %i.icon-on
                Sign up
