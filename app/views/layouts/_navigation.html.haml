.navbar.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => root_path} tsekmark
      .nav-collapse.collapse
        %ul.nav
          %li
            %a{:href => "/"}
              %i.icon-home.icon-white
              Home

        - if user_signed_in?
          %ul.nav.pull-right
            %li
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Welcome, #{blaster.name}
                %b.caret
              %ul
                %li
                  = link_to edit_blaster_path do
                    %i.icon-cog
                    Settings
                - if current_user.has_business?
                  %li
                    = link_to dashboard_switch_path(redirect_path: current_url) do
                      %i.icon-refresh
                      Switch Context
                %li
                  %a{:href => "#"}
                    %i.icon-envelope
                    Contact Support
                %li.divider
                %li
                  = link_to destroy_user_session_path, :method=>'delete' do
                    %i.icon-off
                    Logout
        - else
          %ul.nav.pull-right
            %li
              = link_to new_user_session_path do
                %i.icon-on
                Login
            %li
              = link_to new_user_registration_path do
                %i.icon-on
                Sign up
